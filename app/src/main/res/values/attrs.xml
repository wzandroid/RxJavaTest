<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HomePageTabLayout">
        <attr name="hptv_indicator_width" format="dimension" />
        <attr name="hptv_indicator_height" format="dimension" />
        <attr name="hptv_indicator_color" format="color" />
        <attr name="hptv_indicator_corner_radius" format="dimension" />
        <attr name="hptv_indicator_margin_top" format="dimension" />
        <attr name="hptv_indicator_margin_bottom" format="dimension" />
        <attr name="hptv_indicator_margin_left" format="dimension" />
        <attr name="hptv_indicator_margin_right" format="dimension" />
        <attr name="hptv_text_color" format="color" />
        <attr name="hptv_text_normal_size" format="dimension" />
        <attr name="hptv_text_selected_size" format="dimension" />
        <attr name="hptv_text_bold" format="boolean" />
        <attr name="hptv_image_scale" format="float" />
        <attr name="hptv_animator_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="RCAttrs">
        <attr name="round_as_circle" />
        <attr name="round_corner" />
        <attr name="round_corner_top_left" />
        <attr name="round_corner_top_right" />
        <attr name="round_corner_bottom_left" />
        <attr name="round_corner_bottom_right" />
        <attr name="stroke_color" />
        <attr name="stroke_width" />
        <attr name="clip_background" />
    </declare-styleable>

    <declare-styleable name="XTabLayout">
        <attr name="x_tabIndicatorRoundRect" format="boolean" />
        <attr name="x_tabIndicatorAnimation" format="boolean" />
        <attr name="x_tabIndicatorColor" format="color" />
        <attr name="x_tabIndicatorHeight" format="dimension" />
        <attr name="x_tabIndicatorWidth" format="dimension" />
        <attr name="x_tabContentStart" format="dimension" />
        <attr name="x_tabBackground" format="reference" />
        <attr name="x_tabMode">
            <enum name="scrollable" value="0" />
            <enum name="fixed" value="1" />
        </attr>
        <attr name="x_tabGravity">
            <enum name="fill" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="x_tabMinWidth" format="dimension" />
        <attr name="x_tabMaxWidth" format="dimension" />
        <attr name="x_tabTextAppearance" format="reference" />
        <attr name="x_tabTextColor" format="color" />
        <attr name="x_tabSelectedTextColor" format="color" />
        <attr name="x_tabPaddingStart" format="dimension" />
        <attr name="x_tabPaddingTop" format="dimension" />
        <attr name="x_tabPaddingEnd" format="dimension" />
        <attr name="x_tabPaddingBottom" format="dimension" />
        <attr name="x_tabPadding" format="dimension" />
        <attr name="x_indicatorMarginTop" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MyTabView">
        <attr name="tab_color" format="color"/>
        <attr name="tab_size" format="dimension"/>
        <attr name="tab_space" format="dimension"/>
        <attr name="tab_padding_with" format="dimension"/>
        <attr name="tab_padding_height" format="dimension"/>
    </declare-styleable>
</resources>